<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
  <link rel="icon" type="image/x-icon" href="/assets/img/newHero.png">

  <title>All User</title>
  <link rel="shortcut icon" href="/assetses/img/1200x630wa-removebg-preview.png">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500;1,700&display=swap"
    rel="stylesheet">

  <link rel="stylesheet" href="/assetses/plugins/bootstrap/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />


  <link rel="stylesheet" href="/assetses/plugins/feather/feather.css">

  <link rel="stylesheet" href="/assetses/plugins/icons/flags/flags.css">

  <link rel="stylesheet" href="/assetses/plugins/fontawesome/css/fontawesome.min.css">
  <link rel="stylesheet" href="/assetses/plugins/fontawesome/css/all.min.css">


  <link rel="stylesheet" href="/assetses/css/style.css" type="text/css">
</head>

<body>

  <div class="main-wrapper">

    <div class="header">

      <div class="header-left">
        
      </div>
      <div class="menu-toggle">
        <a href="javascript:void(0);" id="toggle_btn">
          <i class="fas fa-bars" style="color:#fe820e"></i>
        </a>
      </div>


      <a class="mobile_btn" id="mobile_btn">
        <i class="fas fa-bars"></i>
      </a>
     <ul class="nav user-menu">
        <li class="nav-item dropdown has-arrow new-user-menus">
          <a href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown">
            <span class="user-img">
              <img class="rounded-circle" src="/assets/img/hero.png" width="31" alt="adminprofile">
              <div class="user-text">
                <h6>
                 HR
                </h6>
              </div>
            </span>
          </a>
          <div class="dropdown-menu">
            
              
        
            <a class="dropdown-item" href="/logout">Logout</a>
          </div>
        </li>

      </ul>

    </div>


    <div class="sidebar" id="sidebar">
      <div class="sidebar-inner slimscroll">
        <div id="sidebar-menu" class="sidebar-menu" style="color:#fe820e">
          <ul>
            <li class="submenu active" style="color:#fe820e">
              <a href="#"><i class="fas fa-user" style="color:#fe820e"></i> <span style="color:#fe820e"> Dashboard</span> <span class="menu-arrow"style="color:#fe820e"></span></a>
          </ul>
        </div>
      </div>
    </div>


    <div class="page-wrapper">
      <div class="content container-fluid">
        <div class="row">
          <div class="col-sm-12">
            <div class="card card-table comman-shadow">
              <div class="card-body">

                <div class="page-header">
                  <div class="row align-items-center">
                    <div class="col">
                      <h3 class="page-title">Number Of User Register:<%=count%></h3><hr>
                    </div>
                    <div class="col-lg-2">

                      <div class="search-student-btn">
                      </div>
                    </div>
                  </div>
                </div>
                <form action="/hr_page" method="GET" class="row">
                  <div class="col">
                    <div class="mb-2">
                      <label for="name">Name:</label>
                      <input type="text" id="name" name="name" value="<%= name %>">
                    </div>
                  </div>
                  <div class="col">
                    <div class="mb-2">
                      <label for="department">Department:</label>
                      <input type="text" id="department" name="department" value="<%= department %>">
                    </div>
                  </div>
                  <div class="col">
                    <div class="mb-2">
                      <label for="gender">Gender:</label>
                      <input type="text" id="gender" name="gender" value="<%= gender %>">
                    </div>
                  </div>
                  <div class="col">
                    <button type="submit">Submit</button>
                  </div>
                </form>
                

           

                <div class="table-responsive"  >
                    <table id="datatablesSimple" class="table table-striped table-bordered" style="width: 100%;">
                        <thead class="student-thread">
                       
                        <tr>
                          <th>Name</th>
                          <th>Employee Id</th>
                          <th>Gender</th>
                          <th>Date Birth</th>
                          <th>Designation</th>
                          <th>Department</th>                          
                          <th>appointment_date</th>
                          <th>Action</th>
                        </tr>

                      
                      </thead>
                      <tbody>
                        <% hr_detail.reverse().forEach(data=> { %>
                            <tr>
                                <td data-label="name">
                                    <%=data.name%>
                                </td>
                                <td data-label="employee_ID">
                                    <%=data.employee_ID%>
                                </td>
                                <td data-label="gender">
                                    <%=data.gender%>
                                </td>
                                <td data-label="dob">
                                    <%=data.dob.toDateString()%>
                                </td>
                                <td data-label="designation">
                                    <%=data.designation%>
                                </td>
                                <td data-label="department">
                                  <%=data.department%>
                                </td>
                                <td data-label="appointment_date">
                                  <%=data.appointment_date.toDateString()%>
                                </td>
                                <td data-label="action" class="action-buttons">
                                    <div class="button-container">
                                        <form action="/deleterecord/<%=data.id%>" method="post">
                                          <button class="btnnn">
                                            <span class="material-symbols-outlined" style="color: rgb(184, 10, 10);">
                                              delete
                                            </span>
                                          </button>
                                        </form>
                                        <a href="/edit-user/<%=data.id%>">
                                          <span class="material-symbols-outlined" style="color: rgb(6, 6, 167);">
                                            edit
                                          </span>
                                        </a>
                                      </div>
                                  </td>
                                </td>
                            </tr>
                            <% }) %>
                <!-- Table data goes here -->
            
                      </tbody>
                    </table>
                    <div class="btn1">
                        <a href="/add"><button class="button_add">Add</button></a>
                    </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>



    </div>

  </div>

  <script src="/js/filter.js">
    window.onload = () => {
        console.log(document.querySelector("#datatablesSimple > tbody > tr:nth-child(1) > td:nth-child(2) ").innerHTML);
    };

    getUniqueValuesFromColumn()
    
</script>
  <script src="/assetses/js/jquery-3.6.0.min.js"></script>

  <script src="/assetses/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

  <script src="/assetses/js/feather.min.js"></script>

  <script src="/assetses/plugins/slimscroll/jquery.slimscroll.min.js"></script>


  <!-- <script src="assets/plugins/datatables/datatables.min.js"></script> -->

  <script src="/assetses/js/datatables-simple-demo.js"></script>

  <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
    crossorigin="anonymous"></script>
  <script src="/assetses/js/script.js"></script>
</body>

</html>